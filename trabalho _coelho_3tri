#include <stdio.h>

int main()
{

	int coelho = 1;
	int total_de_coelho =1;
	int geracao;
	int geracao_escolhida;

	printf ("digite a geracao que deseja:\n ");
	scanf ("%d", &geracao_escolhida);

	for( int geracao =1; geracao <= geracao_escolhida; geracao++ ) {
		printf("geracao: %d total: %d\n", geracao, total_de_coelho);
		coelho = coelho * 2;
		total_de_coelho = coelho + coelho -1;
	}
}
